<div class="container">
    <div class="row">
    <div class="navbar navbar-fixed-bottom navbar-default">
     <div class="container">
         <div class="navbar-header">
             <a href="/" class="nav-brand">重度科幻迷</a>
         </div>
         <p class="navbar-text navbar-right">
             <% if (user) { %>
             <span><%= user.username %></span>
         </p>
         <form action="/logout" method="get">
             <input type="submit" value="登出">
         </form>
         <% }else { %>
         <a href="#signupModal" class="nav-link" data-toggle="modal">注册</a>
         <span>&nbsp;&nbsp;</span>
         <a href="#loginModal" class="nav-link" data-toggle="modal">登录</a>
         <% } %>
     </div>
     </div>
    <div class="modal" id="signupModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form action="/user/signup" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="username">用户名</label>
                            <input type="text" class="form-control" placeholder="用户名" name="user[username]">
                        </div>
                        <div class="form-group">
                            <label for="password">密码</label>
                            <input type="text" class="form-control" placeholder="密码" name="user[password]">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-success" type="submit">注册</button>
                        <button class="btn btn-primary">取消</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    <div class="modal" id="loginModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form action="/user/login" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="username">用户名</label>
                            <input type="text" class="form-control" placeholder="用户名" name="user[username]">
                        </div>
                        <div class="form-group">
                            <label for="password">密码</label>
                            <input type="text" class="form-control" placeholder="密码" name="user[password]">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-success" type="submit">登录</button>
                        <button class="btn btn-primary">取消</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
</div>
