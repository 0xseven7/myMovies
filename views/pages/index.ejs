<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' >
  </head>
  <body>
    <%- include ../layout.ejs%>
    <div class="container">
      <div class="row">
        <h1><%= title %></h1>
        <% movies.forEach(function (item) {%>
          <div class="col-md-2">
            <div class="thumbnail">
              <a href="/movie/ <%= item._id %>">
                <img src="<%= item.poster%>" alt="<%= item.title%>">
              </a>
              <div class="caption">
                <h3 class="title"><%= item.title%></h3>
                <p>
                  <a class="btn btn-primary" href="/movie/<%= item._id%>" role="button">观看电影预告片</a>
                </p>
              </div>
            </div>
          </div>
        <%})%>
      </div>
    </div>

  </body>
<body>
</body>
</html>
