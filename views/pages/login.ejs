<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title%></title>
</head>
<body>
    <%- include ../layout.ejs %>
    <div class="container">
        <div class="row">
            <div class="col-mid-5">
                <form action="/user/login" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">登录页面</h5>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="username">用户名</label>
                        <input type="text" class="form-control" placeholder="用户名" name="user[username]">
                    </div>
                    <div class="form-group">
                        <label for="password">密码</label>
                        <input type="text" class="form-control" placeholder="密码" name="user[password]">
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" type="submit">登录</button>
                    <button class="btn btn-primary">取消</button>
                </div>
            </form>
            </div>
        </div>
    </div>
</body>
</html>
