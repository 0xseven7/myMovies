<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
  </head>
  <%- include ../layout.ejs %>
  <body>
    <div class="container">
      <div class="row">
        <form method="POST" action="/admin/movie/new" class="form-horizontal" >
            <input type="hidden" name="movie[_id]" value="<%= movie._id%>">

          <div class="form-group">
            <label for="inputTitle" class="col-sm-6 custom-control-label">电影名字</label>
            <div class="col-sm-10">
              <input type="text" id="inputTitle" class="form-control" name="movie[title]" placeholder="<%= movie.title%>" value="<%= movie.title%>">
            </div>
          </div>
          <div class="form-group">
            <label for="inputRating" class="col-sm-6 custom-control-label">评分</label>
            <div class="col-sm-10">
              <input type="text" id="inputRating" class="form-control" name="movie[rating]" placeholder="<%= movie.rating%>" value="<%= movie.rating%>">
            </div>
          </div>
          <div class="form-group">
            <label for="inputDirector" class="col-sm-6 custom-control-label">导演</label>
            <div class="col-sm-10">
              <input type="text" id="inputDirector" class="form-control" name="movie[director]" placeholder="<%= movie.director%>" value="<%= movie.director %>">
            </div>

          </div>
          <div class="form-group">
            <label for="inputCountry" class="col-sm-6 custom-control-label">国家</label>
            <div class="col-sm-10">
              <input type="text" id="inputCountry" class="form-control" name="movie[country]" placeholder="<%= movie.country%>" value="<%= movie.country%>">
            </div>

          </div>
          <div class="form-group">
            <label for="inputTitle" class="col-sm-6 custom-control-label">语言</label>


            <div class="col-sm-10">
              <input type="text" id="inputTitle" class="form-control" name="movie[language]" placeholder="<%= movie.language %>" value="<%= movie.language %>">
            </div>

          </div>
          <div class="form-group">
            <label for="inputYear" class="col-sm-6 custom-control-label">上映年份</label>
            <div class="col-sm-10">
              <input type="text" id="inputYear" class="form-control" name="movie[year]" placeholder="<%= movie.year %>" value="<%= movie.year %>">
            </div>
          </div>
          <div class="form-group">
            <label for="inputDescription" class="col-sm-6 custom-control-label">简介</label>
            <div class="col-sm-10">
              <input type="text" id="inputDescription" class="form-control" name="movie[description]" placeholder="<%= movie.description%>"  value="<%= movie.description%>">
            </div>
          </div>
            <div class="form-group">
            <label for="inputFlash" class="col-sm-6 custom-control-label">视频链接</label>
            <div class="col-sm-10">
              <input type="text" id="inputFlash" class="form-control" name="movie[flash]" placeholder="<%= movie.flash %>" value="<%= movie.flash %>">
            </div>
          </div>
           <div class="form-group">
            <label for="inputFlash" class="col-sm-6 custom-control-label">海报地址</label>
            <div class="col-sm-10">
              <input type="text" id="inputFlash" class="form-control" name="movie[poster]" placeholder="<%= movie.poster %>" value="<%= movie.poster %>">
            </div>
          </div>




          <div class="form-group">
            <div>
              <button class="btn badge-primary" type="submit">录入</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>